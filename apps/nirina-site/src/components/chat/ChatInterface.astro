---
import BoutonSuggestionChat from './BoutonSuggestionChat.astro'
---

<form
  class="chat-container bg-slate-500 dark:bg-slate-700 text-black dark:text-white max-w-lg m-auto p-4 rounded-md flex flex-row gap-3"
>
  <textarea
    class="h-16 w-full bg-transparent resize-none border-none outline-none"
    placeholder="Je voudrais lire le dernier article de blog."
    autofocus></textarea>
  <div class="flex flex-col">
    <button class="bg-blue-500 hover:bg-blue-400 h-8 w-8 p-2 rounded-sm">
      <svg
        viewBox="0 0 24 24"
        class="text-white"
        fill="none"
        xmlns="http://www.w3.org/2000/svg"
      >
        <path
          fill-rule="evenodd"
          clip-rule="evenodd"
          d="M12.2929 4.29289C12.6834 3.90237 13.3166 3.90237 13.7071 4.29289L20.7071 11.2929C21.0976 11.6834 21.0976 12.3166 20.7071 12.7071L13.7071 19.7071C13.3166 20.0976 12.6834 20.0976 12.2929 19.7071C11.9024 19.3166 11.9024 18.6834 12.2929 18.2929L17.5858 13H4C3.44772 13 3 12.5523 3 12C3 11.4477 3.44772 11 4 11H17.5858L12.2929 5.70711C11.9024 5.31658 11.9024 4.68342 12.2929 4.29289Z"
          fill="#FFFFFF"></path>
      </svg>
    </button>
  </div>
</form>

<div class="flex flex-row flex-wrap pt-5 gap-2">
  <BoutonSuggestionChat>
    Je voudrais lire le dernier article de blog
  </BoutonSuggestionChat>
  <BoutonSuggestionChat>
    Peux-tu montrer tous tes articles ?
  </BoutonSuggestionChat>
  <BoutonSuggestionChat>Je voudrais prendre contact</BoutonSuggestionChat>
  <BoutonSuggestionChat>Je me balade juste</BoutonSuggestionChat>
</div>

<style scoped>
  @keyframes fade-in {
    0% {
      opacity: 0;
    }
    50% {
      opacity: 0.3;
    }
    100% {
      opacity: 0.8;
    }
  }
  .chat-container {
    /* animation: fade-in 0.8s ease-out forwards; */
    /* opacity: 0; */
  }

  form {
    opacity: 0.8;
  }
  form:hover {
    opacity: 1;
  }
</style>
