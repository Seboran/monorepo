  "private": true,
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "scripts": {
    "build": "vite build",
    "preview": "pnpm -C ./packages/app-visualisation run preview",
    "dev": "vite dev",
    "test:unit": "vitest run",
    "test:watch": "vitest",
    "format": "prettier --write --cache .",
