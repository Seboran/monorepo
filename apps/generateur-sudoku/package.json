    "@testing-library/vue": "8.1.0",
    "@tsconfig/node18": "18.2.4",
    "@types/jsdom": "21.1.7",
    "@types/node": "22.10.1",
    "@vitejs/plugin-vue": "5.2.1",
    "@vue/test-utils": "2.4.6",
    "@vue/tsconfig": "0.7.0",
    "autoprefixer": "10.4.20",
    "jsdom": "25.0.1",
    "npm-run-all2": "7.0.1",
    "postcss": "8.4.49",
    "tailwindcss": "3.4.16",
    "typescript": "5.6.3",
