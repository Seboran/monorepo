{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "outputs": ["dist/**", ".output/**", ".vitepress/dist/**"],
      "dependsOn": ["^build"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "test:unit": {
      "dependsOn": ["^build"]
    },
    "test:e2e": {},
    "dev": {
      "persistent": true,
      "cache": false
    },
    "pull": {
      "env": [
        "VERCEL_TOKEN",
        "VERCEL_ORG_ID",
        "VERCEL_BLOG_PROJECT_ID",
        "VERCEL_BONS_COMPTES_BONS_AMIS_PROJECT_ID"
      ],
      "cache": false
    },
    "deploy": {
      "dependsOn": ["^pull"],
      "env": [
        "VERCEL_TOKEN",
        "VERCEL_ORG_ID",
        "VERCEL_BLOG_PROJECT_ID",
        "VERCEL_BONS_COMPTES_BONS_AMIS_PROJECT_ID"
      ]
    }
  }
}
